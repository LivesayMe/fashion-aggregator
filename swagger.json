
{
  "swagger": "2.0",
  "info": {
    "title": "CS 341 API",
    "description": "API for CS 341 Week 05",
    "version": "1.0.0"
  },
  "host": "fashion-aggregator.herokuapp.com/",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "paths": {
    "/user/{id}": {
      "get": {
        "description": "Get a user",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "description": "Update a user",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "description": "Delete a user",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/user": {
      "post": {
        "description": "Add a user",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                  "username": {
                      "type": "string",
                      "description": "The username of the user"
                  },
                  "email": {
                      "type": "string",
                      "description": "The email of the user"
                  },
                  "favorites": {
                      "type": "array",
                      "items": {
                          "type": "string"
                      },
                      "description": "The IDs of the favorite outfits of the user"
                  },
                  "ratings": {
                      "type": "array",
                      "items": {
                          "type": "string"
                      },
                      "description": "The IDs of the rated outfits of the user"
                  }
              },
              "required": ["username", "email", "favorites", "ratings"]
          }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/user/{id}/favorites": {
      "get": {
        "description": "Get all the outfits the user has favorited",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/user/{id}/ratings": {
      "get": {
        "description": "Get all ratings of a user",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/rating/{id}": {
      "get": {
        "description": "Get a rating",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/rating": {
      "post": {
        "description": "Adds a rating to the user list and rating list",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                  "userId": {
                      "type": "string",
                      "description": "The ID of the user who rated the outfit"
                  },
                  "outfitId": {
                      "type": "string",
                      "description": "The ID of the outfit that was rated"
                  },
                  "rating": {
                      "type": "number",
                      "description": "The rating of the outfit"
                  }
              },
              "required": ["userId", "outfitId", "rating"]
          }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/outfit": {
      "post": {
        "description": "Gets or generates an outfit randomly",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/outfit/{id}": {
      "get": {
        "description": "Gets an outfit by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "description": "Adds an outfit to the user's favorite list",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "userId": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/outfit/{id}/average": {
      "get": {
        "description": "Returns the average rating of an outfit",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}